<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.group.phondialer.MainActivity">

    <Button
        android:text="6"
        android:textSize="70dp"
        android:background="#000000ff"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:id="@+id/button6" />

    <Button
        android:text="3"
        android:textSize="70dp"
        android:background="#000000ff"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button9"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignTop="@+id/button8" />

    <Button
        android:text="4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button4"
        android:textSize="70dp"
        android:background="#000000ff"

        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:text="1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button7"
        android:layout_marginTop="1dp"

        android:textSize="70dp"
        android:background="#000000ff"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:text="*"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button10"
        android:layout_below="@+id/button7"

        android:textSize="50dp"
        android:background="#000000ff"
        android:layout_alignLeft="@+id/button7"
        android:layout_alignStart="@+id/button7" />

    <Button
        android:text="#"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button12"

        android:textSize="40dp"
        android:background="#000000ff"
        android:layout_below="@+id/button9"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9" />


    <Button
        android:text="5"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:textSize="70dp"
        android:background="#000000ff"
        android:id="@+id/button5"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:text="2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button8"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button5"
        android:textSize="70dp"
        android:background="#000000ff"

        android:layout_alignStart="@+id/button5" />

    <Button
        android:text="0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button11"

        android:textSize="70dp"
        android:background="#000000ff"
        android:layout_alignBottom="@+id/button10"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:layout_below="@+id/button8" />

    <Button
        android:text="8"
        android:layout_width="80dp"

        android:textSize="70dp"
        android:background="#000000ff"
        android:layout_height="80dp"
        android:id="@+id/button2"
        android:layout_above="@+id/button5"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="9"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:textSize="70dp"
        android:background="#000000ff"
        android:id="@+id/button3"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_above="@+id/button6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="7"
        android:layout_width="80dp"

        android:textSize="70dp"
        android:background="#000000ff"
        android:layout_height="80dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:id="@+id/button"
        android:layout_above="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="305dp"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:background="#1fff9100"
        android:textSize="35dp"
        android:ems="10"
        android:textColor="#00f"
        android:id="@+id/Textview"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/p2"
        android:id="@+id/imageButton"

        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button11"
        android:layout_toStartOf="@+id/button11"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <ImageButton
        android:layout_width="60dp"

        android:layout_height="wrap_content"
         android:background="@drawable/latest"
        android:layout_marginRight="70dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toRightOf="@+id/button11"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/imageButton2"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="77dp"
        android:layout_height="60dp"
        android:background="@drawable/backspace"
        android:layout_alignBottom="@+id/Textview"
        android:id="@+id/imageButton3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
